<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_backgroundpopup"
    android:layout_width="250dp"
    android:layout_height="355dp"
    android:padding="5dp"
    android:layout_gravity="center"
   >

    <TextView
        android:id="@+id/quitIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textColor="@color/bluzdark"
        android:text="X"
        android:textSize="10dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:background="@drawable/circlebackground"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/layoutHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/quitIcon">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="ADMIN SPACE"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add your data here"
            android:textSize="11sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layoutHead"
        android:layout_marginTop="15dp">

        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/editext_background"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/editext_leftdrawable"
            android:hint="Enter pseudo..."
            android:textSize="15dp"
            android:drawablePadding="10dp"

            />
        <EditText
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/editext_background"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/editext_leftdrawable_key"
            android:layout_marginTop="19dp"
            android:hint="Enter password..."
            android:textSize="15dp"
            android:drawablePadding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layoutContent"
        android:layout_marginTop="25dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADMIT"
            android:background="@drawable/button_background"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="10sp"
            android:layout_marginLeft="20dp">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@drawable/button_background2"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:layout_marginLeft="10dp">
        </Button>

    </LinearLayout>

</RelativeLayout>